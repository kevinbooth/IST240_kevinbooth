@{
	if(IsPost) {
		int a = Convert.ToInt32(Request["value-a"]);
		int b = Convert.ToInt32(Request["value-b"]);
		string calcType = Request["calc"];
		
		if(calcType == "add") {
			int add = @a + @b;
			<p>Addition of @a and @b: @add;</p>
		}
	}
}
<!DOCTYPE html>
<html>
	<head>
		<title>WebForms Calculator</title>
	</head>
	<body>
		<form method="post" action="">
			<label for='value-a'>Value A</label>
			<input id='value-a' name='value-a' type='text'/>	
			<label for='value-b'>Value B</label>
			<input id='value-b' name='value-b' type='text'/>					
			<fieldset>
			<legend>Calculate:</legend>
			<input id='add'
				name='calc'
				type='radio'
				value='add'/>
			<label for=''>Add</label>
				<input id='subtract'
				name='calc'
				type='radio'
				value='subtract'/>
			<label for='subtract'>Subtract</label>
				<input id='multiply'
				name='calc'
				type='radio'
				value='multiply'/>
			<label for='multiply'>Multiply</label>
				<input id='divide'
				name='calc'
				type='radio'
				value='divide'/>
			<label for='divide'>Divide</label>
			</fieldset>
			<button>Submit</button>
		</form>
	</body>
</html>